<?php

/**
 * @file
 * Contains pocket.module.
 */

/**
 * Implements hook_help().
 *
 * @param $route_name
 *
 * @return string
 */
function pocket_help($route_name) {
  if ($route_name === 'help.page.pocket') {
    $output = '';
    $output .= '<h3>' . t('About') . '</h3>';
    $output .= '<p>' . t('Authenticate and push to the Pocket API.') . '</p>';
    return $output;
  }
  return NULL;
}
